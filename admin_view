    integrity="sha256-ZosEbRLbNQzLpnKIkEdrPv7lOy9C27hHQ+Xp8a4MxAQ=" crossorigin="anonymous"></script>
  <script src='https://cdnjs.cloudflare.com/ajax/libs/tabletop.js/1.5.1/tabletop.min.js'></script>
  <script type='text/javascript'>
    var publicSpreadsheetUrl = '1Hp6zz_f8l9RV2Wgf1RjV8_J3VkE-rk4Q02UKJudpfPk';

    function init() {
      Tabletop.init({
        key: publicSpreadsheetUrl,
        callback: showInfo,
        simpleSheet: true
      })
    }

    function showInfo(data) {

      var html = "";


      for (i = 0; i < data.length; i++) {
        var a = data[i].picture;
        var aa = a.substring(32, 65);
        var cc = 'https://drive.google.com/uc?id=' + aa;
        var dd = "'" + cc + "'";
        html += "<div><img src=" + cc + "><h1>" + data[i].name + "</h1><h3>" + data[i].school + "</h3><h3>" + data[i]
          .position + "</h3></div>"

      }

      html += "</div>";
      console.log(html);

      document.getElementById("xx").innerHTML += html;

    }

    window.addEventListener('DOMContentLoaded', init)
  </script>


